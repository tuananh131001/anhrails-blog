<%= link_to 'Back', admin_blogs_path, class: 'btn btn-secondary btn-sm max-w-12' %>
<%= form_for([:admin, @blog], data: { controller: 'editor'} ) do |form|%>
  <p>
    <b>Blog Title</b><br>
    <%= form.text_field :title, class: "input input-bordered w-full max-w-xs mt-2" %>
  </p>
  <div>
    <b>Blog Content</b><br>
    <div id="blog_content" data-editor-target="blog_content" class="bg-white">
  </div>
  <b>Blog tags</b><br>
    <%= form.text_field :tag, class: "input input-bordered w-full max-w-xs mt-2" %>
  </p>
  <p>
  <%= form.submit class: "btn btn-primary mt-2" %>
  </p>
<% end %>
</div>
